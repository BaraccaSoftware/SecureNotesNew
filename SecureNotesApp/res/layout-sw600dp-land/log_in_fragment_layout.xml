<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_accedi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/accedi" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_password"
        android:layout_alignRight="@+id/button_accedi"
        android:background="@drawable/artwork"
        android:contentDescription="@string/about_bs" />

    <TextView
        android:id="@+id/textView_appname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_accedi"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="31dp"
        android:text="@string/app_name_2"
        android:textSize="45sp" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_accedi"
        android:layout_alignRight="@+id/textView_appname2"
        android:layout_marginBottom="93dp"
        android:layout_marginRight="13dp"
        android:ems="10"
        android:hint="@string/hint_edtx"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_password"
        android:layout_below="@+id/textView_appname2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:text="@string/login_text"
        android:textSize="45sp" />

</RelativeLayout>