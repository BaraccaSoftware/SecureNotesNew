<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView_appname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_2"
        android:textSize="60sp"
        android:layout_below="@+id/baracca_software_presents"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_marginRight="32dp" />

    <Button
        android:id="@+id/button_signin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/accedi"
        android:background="@drawable/rounded_border_red"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"  />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/artwork"
        android:contentDescription="@string/about_bs"
        android:layout_alignTop="@+id/baracca_software_presents"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/baracca_software_presents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/baracca_software"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_appname2"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/editText_ins_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_ins_password"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/baracca_software_presents">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_reins_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_ins_password"
        android:layout_alignStart="@+id/editText_ins_password"
        android:layout_below="@+id/editText_ins_password"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/reins_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/register_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_new_user"
        android:textSize="30sp"
        android:layout_below="@+id/textView_appname2"
        android:layout_alignStart="@+id/baracca_software_presents" />

</RelativeLayout>
